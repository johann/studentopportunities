<%= simple_form_for(@job_opportunity) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :division %>
    <%= f.input :department %>
    <%= f.input :position %>
    <%= f.input :description %>
    <%= f.input :gpa %>
    <%= f.input :contact %>
    <%= f.input :mailto %>
    <%= f.input :status %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
